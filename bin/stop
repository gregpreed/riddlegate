#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source $DIR/locate.sh

pid=$(riddlegate_locate)
if [[ ! -z "$pid" ]]; then
  echo "$0: Killing $pid"
  kill "$pid" || exit 1

  while [[ "$(riddlegate_locate)" == "$pid" ]]; do
    echo "$0: waiting for shutdown..."
    sleep 1
  done
fi

echo "$0: shutdown complete. removing pidfile."
rm -rf "$(riddlegate_pidfile)"
